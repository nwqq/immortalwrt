# 基础配置：IPQ5322 + 京东云ER2（适配官方仓库）
CONFIG_TARGET_ipq50xx=y
CONFIG_TARGET_ipq50xx_generic=y
CONFIG_TARGET_ipq50xx_generic_DEVICE_jdcloud_er2=y
CONFIG_TARGET_BOARD="ipq50xx"

# 系统核心配置（适配官方仓库）
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_CPU_TYPE="cortex-a53"
CONFIG_KERNEL_CPU_FREQ_DEFAULT_GOV_ONDEMAND=y
CONFIG_KERNEL_PERF_EVENTS=y
CONFIG_LIBCURL_OPENSSL=y
CONFIG_LIBCURL_PROXY=y

# 强制启用iStore插件商店（核心需求）
CONFIG_PACKAGE_istore-core=y
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_luci-i18n-store-zh-cn=y

# 官方仓库基础插件（必选）
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-sshd=y
CONFIG_PACKAGE_luci-app-wifi-config=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_opkg=y

# IPQ5322硬件适配（官方仓库+QWRT补丁）
CONFIG_PACKAGE_kmod-phy-qcom-ipq5018=y
CONFIG_PACKAGE_kmod-qca-nss-dp=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-wifi-qca-mac80211=y
CONFIG_PACKAGE_wireless-regdb=y

# 固件瘦身（适配ER2存储/内存）
# CONFIG_IPV6 is not set
# CONFIG_DEBUG is not set
# CONFIG_KERNEL_DEBUG is not set
CONFIG_LUCI_LANG_zh-cn=y
CONFIG_LUCI_LANG_en=y
